{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noErrorTruncation": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["lib/**/*", "demo/**/*"],
  "exclude": ["node_modules"]
}